<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android.support.v7.widget.CardView="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/satirCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_margin="3dp"
        android.support.v7.widget.CardView:cardBackgroundColor="@color/colorYellow"
        android.support.v7.widget.CardView:cardCornerRadius="10dp"
        android.support.v7.widget.CardView:cardElevation="@dimen/cardview_compat_inset_shadow"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        app:contentPadding="@dimen/cardview_compat_inset_shadow">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/satirYazi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="15dp"
                android:text="TextView"
                android:textAlignment="viewStart"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/satirSure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/satirYazi"
                android:layout_alignParentRight="true"
                android:layout_margin="15dp"
                android:text=""
                android:textAlignment="viewStart"
                android:textSize="16sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>