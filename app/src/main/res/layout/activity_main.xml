<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <TextView
        android:id="@+id/konum"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="251dp"
        android:layout_marginEnd="-334dp"
        android:layout_toStartOf="@+id/buttonNGE"
        android:text=" GÜZERGAH ARAMA"
        android:layout_below="@+id/cizgi"/>

    <View
        android:id="@+id/cizgi"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="271dp"
        android:background="@android:color/darker_gray" />


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="6dp"
        map:cardCornerRadius="10dp"
        map:cardElevation="2dp"
        map:contentPadding="@dimen/cardview_compat_inset_shadow">

        <RelativeLayout
            android:layout_width="417dp"
            android:layout_height="295dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="8dp"
            android:background="@color/colorYellow"
            android:elevation="7dp"
            android:outlineSpotShadowColor="@color/colorYellow">

            <android.support.v7.widget.CardView
                android:id="@+id/ayarlar"
                android:layout_width="119dp"
                android:layout_height="128dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="219dp"
                android:layout_marginTop="161dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="6dp"
                map:cardBackgroundColor="#f9a825"
                map:cardCornerRadius="10dp"
                map:cardElevation="7dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="34dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    map:srcCompat="@drawable/ic_settings_black_24dp"
                    android:contentDescription="@null"/>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Ayarlar" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/duyuru"
                android:layout_width="118dp"
                android:layout_height="128dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="64dp"
                android:layout_marginTop="160dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="7dp"
                map:cardBackgroundColor="#fbc02d"
                map:cardCornerRadius="10dp"
                map:cardElevation="7dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Duyurular" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    map:srcCompat="@drawable/ic_priority_high_black_24dp"
                    android:contentDescription="@null"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/tasit"
                android:layout_width="121dp"
                android:layout_height="127dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="218dp"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="149dp"
                map:cardBackgroundColor="#fdd835"
                map:cardCornerRadius="10dp"
                map:cardElevation="7dp">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Tasitlar" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    map:srcCompat="@drawable/ic_subway_black_24dp"
                    android:contentDescription="@null"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/durak"
                android:layout_width="118dp"
                android:layout_height="125dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="64dp"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="151dp"
                map:cardBackgroundColor="#ffeb3b"
                map:cardCornerRadius="10dp"
                map:cardElevation="7dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    map:srcCompat="@drawable/ic_room_black_24dp"
                    android:contentDescription="@null"/>

                <TextView
                    android:id="@+id/duraklar"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="En yakın duraklar"
                    android:textAlignment="center" />
            </android.support.v7.widget.CardView>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="222dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:context=".MainActivity" />

    <Button
        android:id="@+id/buttonNGE"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="289dp"
        android:layout_marginEnd="29dp"
        android:background="@drawable/flat_button_normal"
        android:paddingLeft="5dp"
        android:text="🔍 Nereye gitmek istersin?"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</RelativeLayout>